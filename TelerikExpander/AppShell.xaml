<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TelerikExpander.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TelerikExpander"
    xmlns:pages="clr-namespace:TelerikExpander.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="ControlPages">
        <ShellContent
            Title="RichText"
            ContentTemplate="{DataTemplate pages:RichTextEditorPage}"
            Route="RichText" />
    </FlyoutItem>
</Shell>
