<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TelerikBlazorMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TelerikBlazorMaui"
    xmlns:pages="clr-namespace:TelerikBlazorMaui.Pages"
    Shell.FlyoutBehavior="Locked">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="TemplateTreeView"
        ContentTemplate="{DataTemplate pages:TemplateTreeViewPage}"
        Route="Template" />
    <ShellContent
        Title="FlatTreeView"
        ContentTemplate="{DataTemplate pages:FlatTreeViewPage}"
        Route="FlatTree" />
    <ShellContent Title="Format"
                  ContentTemplate="{DataTemplate pages:FormatTreeNodePage}"
                  Route="FormatTree"/>
</Shell>
